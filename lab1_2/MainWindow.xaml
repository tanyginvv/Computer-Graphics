<Window x:Class="lab1_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid MouseDown="Grid_MouseDown" MouseMove="Grid_MouseMove" MouseUp="Grid_MouseUp">
        <Canvas x:Name="canvas">
            <Canvas x:Name="groupCanvas">
                <Rectangle Fill="Black" Height="80" Width="80" Canvas.Left="0" Canvas.Top="0"/>
                <Polygon Points="0,0 8,5, 0,10" Stroke="Black" Fill="Black" Canvas.Left="80" Canvas.Top="0"/>
                
            </Canvas>
        </Canvas>
    </Grid>



</Window>
