<Window x:Class="lab3_1.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sharpGL="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
        Title="SharpGL Graph" Width="800" Height="600">
    <Grid VerticalAlignment="Stretch">
        <sharpGL:OpenGLControl x:Name="openGLControl" OpenGLInitialized="OpenGLControl_OpenGLInitialized" OpenGLDraw="OpenGLControl_OpenGLDraw" Margin="-20,-17,-47,-18" RenderTransformOrigin="0.5,0.5" >
            <sharpGL:OpenGLControl.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1" ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </sharpGL:OpenGLControl.RenderTransform>
        </sharpGL:OpenGLControl>
    </Grid>
</Window>